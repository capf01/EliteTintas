<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/dark_blue">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Nome -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nome"
            android:fontFamily="@font/poppins_bold"
            android:textColor="@color/white" />
        <EditText
            android:id="@+id/nomeField"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Digite seu nome"
            android:textColor="@color/white"
            android:textColorHint="@color/white" />

        <!-- Email -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email"
            android:fontFamily="@font/poppins_bold"
            android:textColor="@color/white" />
        <EditText
            android:id="@+id/emailField"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Digite seu email"
            android:inputType="textEmailAddress"
            android:textColor="@color/white"
            android:textColorHint="@color/white" />

        <!-- Endereço -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Endereço"
            android:fontFamily="@font/poppins_bold"
            android:textColor="@color/white" />
        <EditText
            android:id="@+id/enderecoField"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Digite seu endereço"
            android:textColor="@color/white"
            android:textColorHint="@color/white" />

        <!-- Telefone -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Telefone"
            android:fontFamily="@font/poppins_bold"
            android:textColor="@color/white" />
        <EditText
            android:id="@+id/telefoneField"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Digite seu telefone"
            android:inputType="phone"
            android:textColor="@color/white"
            android:textColorHint="@color/white" />

        <!-- Senha -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Senha"
            android:fontFamily="@font/poppins_bold"
            android:textColor="@color/white" />
        <EditText
            android:id="@+id/senhaField"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Digite sua senha"
            android:inputType="textPassword"
            android:textColor="@color/white"
            android:textColorHint="@color/white" />

        <!-- Confirmar Senha -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Confirmar Senha"
            android:fontFamily="@font/poppins_bold"
            android:textColor="@color/white" />
        <EditText
            android:id="@+id/confirmarSenhaField"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Digite novamente sua senha"
            android:inputType="textPassword"
            android:textColor="@color/white"
            android:textColorHint="@color/white" />

        <!-- Botão de Cadastro -->
        <Button
            android:id="@+id/cadastrarButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cadastrar"
            android:backgroundTint="@color/yellow"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_marginTop="16dp" />

    </LinearLayout>
</ScrollView>
