<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="8dp"
    android:padding="16dp"
    app:cardBackgroundColor="@color/dark_blue">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Área da Logo e Tagline -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_marginBottom="16dp">

            <!-- Logo -->
            <ImageView
                android:id="@+id/logoImageView"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/logo" />

            <!-- Tagline -->
            <TextView
                android:id="@+id/taglineTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ELITE"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                android:gravity="center" />

            <TextView
                android:id="@+id/taglineSubTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TINTAS"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:gravity="center" />
        </LinearLayout>

        <!-- Imagem do Perfil em Círculo -->
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imageViewFotoAtendente"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginBottom="16dp"
            android:scaleType="centerCrop"
            android:src="@drawable/isabel"
            android:padding="4dp"/>

        <!-- Nome e Cargo -->
        <TextView
            android:id="@+id/textViewNomeAtendente"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_bold"
            android:text="Nome do Atendente"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textViewCargoAtendente"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_light"
            android:text="Cargo do Atendente"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <!-- Informações Detalhadas -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:layout_marginBottom="16dp"
            android:gravity="center"
            >

            <TextView
                android:id="@+id/textViewContatoAtendente"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_light"
                android:text="Contato do Atendente"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/emailTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email: your.mail@example.com"
                android:textColor="@color/white"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- Botões lado a lado, ajustados ao conteúdo e arredondados -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/buttonAgendarAtendimento"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:background="@drawable/rounded_button_background"
                android:fontFamily="@font/poppins_bold"
                android:text="Agendar"
                android:textColor="@color/white"
                android:textSize="12sp"

                />

            <Button
                android:id="@+id/buttonWhatsApp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_button_background"
                android:fontFamily="@font/poppins_bold"
                android:text="WhatsApp"
                android:textColor="@color/white"
                android:textSize="12sp" />
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>